<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lzs.unwechat10.csol"
    android:background="#E6E6E6">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/ly_tab_bar"
        android:layout_alignParentBottom="true">

    <TextView
        android:background="@drawable/tab_menu_bg"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:id="@+id/txt_home"
        android:textSize="12sp"
        android:textColor="@drawable/tab_menu_text"
        android:text="@string/txt_home"
        android:gravity="center"
        android:drawableTop="@drawable/tab_menu_home"
        android:drawablePadding="-8dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp" />

    <TextView
        android:background="@drawable/tab_menu_bg"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:id="@+id/txt_service"
        android:textSize="12sp"
        android:textColor="@drawable/tab_menu_text"
        android:text="@string/txt_service"
        android:gravity="center"
        android:drawableTop="@drawable/tab_menu_service" android:drawablePadding="-8dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"/>

    <TextView
        android:background="@drawable/tab_menu_bg"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:id="@+id/txt_discover"
        android:textSize="12sp"
        android:textColor="@drawable/tab_menu_text"
        android:text="@string/txt_discover"
        android:gravity="center"
        android:drawableTop="@drawable/tab_menu_discover"
        android:drawablePadding="-8dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"/>

    <TextView
        android:background="@drawable/tab_menu_bg"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:id="@+id/txt_my"
        android:textSize="12sp"
        android:textColor="@drawable/tab_menu_text"
        android:text="@string/txt_my"
        android:gravity="center"
        android:drawableTop="@drawable/tab_menu_my"
        android:drawablePadding="-8dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点我注销"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center"
        android:id="@+id/back"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
